{
  "processName": "testProc",
  "globalValue": {
    "url": "http://www.sunsmm.com",
    "encoding": "gbk"
  },
  "functionDefine": {
    "getPage": {
      "parameters": ["page"],
      "process": [
        {
          "action": "getHtml",
          "url": "{url}/forumdisplay.php",
          "queryParameters": {
            "fid": 59,
            "page": "{page}"
          },
          "method": "get",
          "charset": "gbk"
        },
        {
          "action": "selector",
          "type": "dom",
          "script": "[name=\"moderate\"]"
        },
        {
          "action": "callMultiProcess",
          "multiProcess": [
            {
              "action": "multiSelector",
              "type": "xpath",
              "script": "//a/@href"
            },
            {
              "action": "foreach",
              "eachProcess": [
                {
                  "action": "condition",
                  "exp": [
                    {
                      "expType": "contain",
                      "exp": "viewthread.php"
                    },
                    {
                      "expType": "contain",
                      "exp": "extra",
                      "not": true,
                      "relation": "and"
                    }
                  ],
                  "trueProcess": [
                    {
                      "action": "concat",
                      "front": "{url}/"
                    },
                    {
                      "action": "print"
                    }
                  ],
                  "falseProcess": [
                    {
                      "action": "break"
                    }
                  ]
                }
              ]
            },
            {
              "action": "remove",
              "condition": [
                {
                  "expType": "isNull"
                }
              ]
            },
            {
              "action": "foreach",
              "eachProcess": [
                {
                  "action": "callFunction",
                  "functionName": "getThread"
                }
              ]
            }
          ]
        }
      ]
    },
    "getThread": {
      "process": [
        {
          "action": "push"
        },
        {
          "action": "split",
          "pattern": "tid=",
          "index": 1
        },
        {
          "action": "setValue",
          "valueName": "tid"
        },
        {
          "action": "pop"
        },
        {
          "action": "getHtml",
          "url": "{this}",
          "method": "get",
          "charset": "gbk"
        },
        {
          "action": "push"
        },
        {
          "action": "selector",
          "type": "dom",
          "script": "title"
        },
        {
          "action": "split",
          "pattern": " ",
          "index": 0
        },
        {
          "action": "setValue",
          "valueName": "title"
        },
        {
          "action": "pop"
        },
        {
          "action": "selector",
          "type": "dom",
          "script": "form"
        },
        {
          "action": "replace",
          "from": "<br[ |/]*>",
          "to": "\n"
        },
        {
          "action": "replace",
          "from": "<input[^>]*>",
          "to": ""
        },
        {
          "action": "callMultiProcess",
          "multiProcess": [
            {
              "action": "multiSelector",
              "type": "xpath",
              "script": "//img/@src"
            },
            {
              "action": "remove",
              "condition": [
                {
                  "expType": "contain",
                  "exp": "http",
                  "not": true
                },
                {
                  "expType": "contain",
                  "exp": ["jpg","gif","bmp","png","jpeg"],
                  "not": true,
                  "relation": "or"
                }
              ]
            },
            {
              "action": "foreach",
              "eachProcess": [
                {
                  "action": "print",
                  "value": "正在下载{this}"
                },
                {
                  "action": "callFunction",
                  "functionName": "downloadPic"
                }
              ]
            }
          ]
        }
      ]
    },
    "downloadPic": {
      "process": [
        {
          "action": "push"
        },
        {
          "action": "split",
          "pattern": "/",
          "index": "last"
        },
        {
          "action": "split",
          "pattern": ".",
          "index": "first"
        },
        {
          "action": "setValue",
          "valueName": "picname"
        },
        {
          "action": "pop"
        },
        {
          "action": "saveUrlFile",
          "url": "{this}",
          "fileName": "{system.currentdir}/../../temp/mm/{system.date}/{tid}-{title}/{picname}"
        }
      ]
    }
  },
  "beginSegment": [
    {
      "action": "for",
      "valueName": "ipage",
      "type": "list",
      "list": [1,2],
      "loopProcess": [
        {
          "action": "callFunction",
          "functionName": "getPage",
          "parameters": {
            "page": "{ipage}"
          }
        },
        {
          "action": "lampFlash"
        },
        {
          "action": "unkown"
        }
      ]
    }
  ]
}